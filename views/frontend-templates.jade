script(id="envvar-list-tmpl", type="text/html")
	.modal-header
		a.close(data-dismiss="modal") &times;
		h3 {{name}}
	.modal-body
		table.table(cellpadding="0", cellspacing="0")
			{{#vars}}
			tr
				td.label {{key}}
				td.swap.envvar 
					span {{value}}
					input(type="text", data-params='{"appname":"{{name}}", "key":"{{key}}"}', value="{{value}}")
			{{/vars}}